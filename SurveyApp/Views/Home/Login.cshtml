<!doctype html>
<html lang="en">

<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="~/https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/css/style.css">

</head>

<body class="img js-fullheight" style="background-image: url(images/bg_2.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Login</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Have an account?</h3>
						<form method="POST" action="#">
							
							<input name="Email" action="/Home/Login" class="form-control" type="email" placeholder="Email" required />
							<br>
							<input name="Password" action="/Home/Login" class="form-control" type="password" placeholder="Password"
								required />
							@if (@TempData["Login"] != null)
							{
								<h6 style="color: red; border: 2px solid red; padding:5px ; border-radius :3px;">
									<strong>@TempData["Login"]</strong>
								</h6>

							}
							<br>
							<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
							
						</form>
						<p class="w-100 text-center mt-3">&mdash; Don't Have an Account ? &mdash;</p>
						<div class="social d-flex text-center">

							<a style="px-2 py-2 mr-md-1 rounded" asp-controller="Home" asp-action="Register">
								REGISTER
							</a>

						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/popper.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/main.js"></script>

</body>

</html>
